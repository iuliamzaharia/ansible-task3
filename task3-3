- hosts: centos
  vars:
    replacement_strings:
      - { regex: '^time1.*$', replacement: 'server time1.google.com iburst' }
      - { regex: '^time2.*$', replacement: 'server time2.google.com iburst' }

  tasks:
    - name: Replace list of strings in chrony.conf
      replace:
        path: /etc/chrony.conf
        regexp: "{{ item.regex }}"
        replace: "{{ item.replacement }}"
      with_items: "{{ replacement_strings }}"
